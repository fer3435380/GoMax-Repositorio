<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_one_form" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.inherit.l10n_ec_online_services</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="ReIdi" data-string="Sales" name="l10n_ec_online_services">
                    <block title="ReIdi Service" name="one_setting_container">
                        <setting
                            id="one_option_reidi"
                            help="Recover Identification from ReIdi Online Service"
                        >
                            <field name="use_reidi" />
                            <div class="content-group" invisible="not use_reidi">
                                <label
                                    string="URL"
                                    for="reidi_api_url"
                                    class="col-lg-4 o_light_label"
                                />
                                <field name="reidi_api_url" style="width:90%;" />
                                <label
                                    string="Token"
                                    for="reidi_bearer_token"
                                    class="col-lg-4 o_light_label"
                                />
                                <field name="reidi_bearer_token" style="width:90%;" />
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

    <record id="action_one_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_one_form" />
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field
            name="context"
        >{'module' : 'l10n_ec_online_services', 'bin_size': False}</field>
    </record>
</odoo>
