<odoo>
    <!--Tree Friend-->
    <record id="view_one_version_tree" model="ir.ui.view">
        <field name="name">Version</field>
        <field name="model">one.version</field>
        <field name="arch" type="xml">
            <list>
                <field name="version" />
            </list>
        </field>
    </record>

    <!--Form Version-->
    <record id="view_one_version_form" model="ir.ui.view">
        <field name="name">Version</field>
        <field name="model">one.version</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="version" />
                    <field name="version_database" />
                    <field name="version_python" />
                    <field name="version_os" />
                    <field name="version_odoo" />
                </group>
            </form>
        </field>
    </record>

    <record id="action_one_version" model="ir.actions.act_window">
        <field name="name">Version</field>
        <field name="res_model">one.version</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
