<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_one_reidi_form" model="ir.ui.view">
        <field name="name">Recover Identification - ReIdi</field>
        <field name="model">one.reidi.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="pos_session_group">
                    <field name="identification" mode="list" />
                    <field name="name" mode="list" readonly="1" />
                    <field name="address" mode="list" readonly="1" />
                </group>

                <footer>
                    <button
                        name="recover"
                        string="Recover"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_one_reidi" model="ir.actions.act_window">
        <field name="name">Recover Identification - ReIdi</field>
        <field name="res_model">one.reidi.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
