<odoo>
    <data>
        <record id="view_ott_channel_list" model="ir.ui.view">
            <field name="name">ott.channel.list</field>
            <field name="model">ott.channel</field>
            <field name="arch" type="xml">
                <list string="OTT Channels">
                    <field name="channel_code" string="Channel Code"/>
                    <field name="channel_name" string="Channel Name"/>
                    <field name="channel_state" string="State"/>
                </list>
            </field>
        </record>

        <record id="view_ott_channel_form" model="ir.ui.view">
            <field name="name">ott.channel.form</field>
            <field name="model">ott.channel</field>
            <field name="arch" type="xml">
                <form string="OTT Channel">
                    <sheet>
                        <group>

                            <group>
                                <field name="channel_code" placeholder="Insert the channel code here..."/>
                                <field name="channel_name" placeholder="Insert the channel name here..."/>
                                <field name="channel_state"/>
                                <field name="channel_category"/>
                            </group>

                            <group>
                                <field name="channel_image" invisible="1"/>

                                <field name="channel_image"
                                       string="Upload Image"
                                       filename="image_filename"
                                       widget="binary"
                                       invisible="channel_image"/>
                                
                                <field name= "channel_image"
                                       widget="image"
                                       nolabel="1"
                                       options="{'size': [200, 200]}"
                                       invisible="not channel_image"
                                        class="centered-image"/>

                                <field name="image_filename" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_ott_channel" model="ir.actions.act_window">
            <field name="name">OTT Channels</field>
            <field name="res_model">ott.channel</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create and manage OTT Channels here.
                </p>
            </field>
        </record>

        <menuitem id="menu_ott_channel_action"
                  name="OTT Channels"
                  parent="subscription_package.subscription_menu_config"
                  action="action_ott_channel"
                  sequence="122"/>

    </data>
</odoo>