<odoo>
    <data>
        <record id="ott_service_list_view" model="ir.ui.view">
            <field name="name">ott.service.list</field>
            <field name="model">ott.service</field>
            <field name="arch" type="xml">
                <list string="OTT Services">
                    <field name="service"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <record id="ott_service_form_view" model="ir.ui.view">
            <field name="name">ott.service.form</field>
            <field name="model">ott.service</field>
            <field name="arch" type="xml">
                <form string="OTT Service">
                    <sheet>
                        <group>
                            <field name="service"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ott_subscription_service_action" model="ir.actions.act_window">
            <field name="name">Service</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ott.service</field>
            <field name="view_mode">list,form</field>
        </record>


        <menuitem id="ott_subscription_package_service_menu"
                  name="Services"
                  parent="subscription_package.subscription_menu_config"
                  action="ott_subscription_service_action"
                  groups="group_ott_admin"
                  sequence="120"
                  />
    </data>
</odoo>