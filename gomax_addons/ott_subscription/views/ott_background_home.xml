<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_ott_background_home_list" model="ir.ui.view">
            <field name="name">ott.background.home.list</field>
            <field name="model">ott.background.home</field>
            <field name="arch" type="xml">
                <list string="Background Home">
                    <field name="title" string="Title"/>
                    <field name="state" string="State"/>
                </list>
            </field>
        </record>

      <record id="view_ott_background_home_form" model="ir.ui.view">
            <field name="name">ott.background.home.form</field>
            <field name="model">ott.background.home</field>
            <field name="arch" type="xml">
                <form string="Background Home">
                    <sheet>
                        <group>
                            <group>
                                <field name="title" placeholder="Insert the title here..."/>
                                <field name="state"/>
                            </group>

                            <group>
                                <field name="image_file" invisible="1"/>

                                <field name="image_file"
                                    string="Upload Image"
                                    filename="image_filename"
                                    widget="binary"
                                    invisible="image_file"/>

                                <field name="image_file"
                                    widget="image"
                                    nolabel="1"
                                    options="{'size': [400, 400]}"
                                    invisible="not image_file"
                                    class="centered-image"/>

                                <field name="image_filename" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_ott_background_home" model="ir.actions.act_window">
            <field name="name">Background Home</field>
            <field name="res_model">ott.background.home</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create background images for the OTT Home Screen
            </p>
            </field>
        </record>

        <menuitem id="menu_ott_background_home_action"
                name="Background Home"
                parent="subscription_package.subscription_menu_config"
                action="action_ott_background_home"
                sequence="121"/>
    </data>
</odoo>