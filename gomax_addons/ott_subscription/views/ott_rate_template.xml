<odoo>
    <data>

        <record id="view_ott_rate_template_tree" model="ir.ui.view">
            <field name="name">ott.rate.template.list</field>
            <field name="model">ott.rate.template</field>
            <field name="arch" type="xml">
                <list string="Event Rates">
                    <field name="rate_name"/>
                    <field name="rate_type"/>
                    <field name="rate_start_date"/>
                    <field name="rate_end_date"/>
                    <field name="rate_state"/>
                </list>
            </field>
        </record>

        <record id="view_ott_rate_template_form" model="ir.ui.view">
            <field name="name">ott.rate.template.form</field>
            <field name="model">ott.rate.template</field>
            <field name="arch" type="xml">
                <form string="Event Rate">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="rate_state"/>

                        <div class="oe_title">
                            <label for="rate_name" class="oe_edit_only"/>
                            <h1>
                                <field name="rate_name" 
                                    placeholder="e.g. Summer Special 2026" 
                                    readonly="not rate_state"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="rate_product" readonly="not rate_state"/>
                                <field name="rate_type" readonly="not rate_state"/>
                                
                                <field name="rate_permanence" 
                                    readonly="rate_type == 'special' or not rate_state"
                                    force_save="1"/>
                            </group>
                            <group>
                                <field name="rate_start_date" 
                                    readonly="rate_type == 'normal' or not rate_state" 
                                    force_save="1"/>
                                    
                                <field name="rate_end_date"
                                    readonly="rate_type != 'special' or not rate_state"
                                    force_save="1"/>

                                <field name="rate_state" 
                                    widget="boolean_toggle" 
                                    readonly="not rate_state"/>
                                    
                                <field name="currency_id" invisible="1"/>
                                <field name="rate_price" 
                                    widget="monetary" 
                                    options="{'currency_field': 'currency_id'}" 
                                    readonly="not rate_state"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_ott_rate_template" model="ir.actions.act_window">
            <field name="name">Event Rates</field>
            <field name="res_model">ott.rate.template</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Event Rate Template
                </p>
            </field>
        </record>


        <menuitem id="rate_events"
              name="Rate Template"
              parent="subscription_package.subscription_menu_root"
              action="action_ott_rate_template"
              sequence="12"/>
  </data>
</odoo>
